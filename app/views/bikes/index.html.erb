<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}
</style>
<div>

<style>
h1 {
    text-align: center;
}

</style>

<h1>Listing bikes</h1>

</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Maker</th>
      <th>Size</th>
      <th>Price</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Category</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.maker %></td>
        <td><%= bike.size %></td>
        <td><%= bike.price %></td>
        <td><%= bike.description %></td>
        <td><%= image_tag(bike.picture,:size=>"80x50")%></td>
        <td><%= bike.category.name %></td>
        <td><%= bike.customer.name %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
